<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.courtaks.learningapplication.projects1.dialogues_activity"
    tools:showIn="@layout/activity_dialogues_activity"
    android:orientation="vertical">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prompt Dialogue"
        android:id="@+id/button12"
        android:layout_gravity="center_horizontal"
        android:onClick="open_dialogue1"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Outer Dialogue"
        android:id="@+id/button13"
        android:layout_gravity="center_horizontal"
        android:onClick="open_dialogue2"
        />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress Dialogue Refresher"
        android:id="@+id/button14"
        android:layout_gravity="center_horizontal"
        android:onClick="progress_dialogue1"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress Dialogue (Progress Bar)"
        android:id="@+id/button15"
        android:layout_gravity="center_horizontal"
        android:onClick="progress_dialogue2"
        />
</LinearLayout>
